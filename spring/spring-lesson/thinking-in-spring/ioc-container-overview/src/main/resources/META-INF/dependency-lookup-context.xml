<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="user" class="com.wjy.spring.ioc.overview.domain.User">
        <property name="id" value="1" />
        <property name="name" value="LW" />
        <property name="city" value="CHENGDU"/>
        <property name="workCities" value="CHENGDU,XIAN"/>
<!--        <property name="lifCities" value="CHONGQING,XIAN"/>-->
        <property name="resource" value="classpath:META-INF/user-config.properties"/>
        <property name="lifCities">
            <list>
                <value>CHONGQING</value>
                <value>XIAN</value>
            </list>
        </property>
    </bean>

    <bean id="superUser" class="com.wjy.spring.ioc.overview.domain.SuperUser" parent="user" primary="true">
        <property name="addr" value="成都" />
    </bean>

    <bean id="objectFactory" class="org.springframework.beans.factory.config.ObjectFactoryCreatingFactoryBean">
        <property name="targetBeanName" value="user"/>
    </bean>
</beans>